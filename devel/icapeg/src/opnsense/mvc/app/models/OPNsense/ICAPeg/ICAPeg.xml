<model>
    <mount>//OPNsense/icapeg</mount>
    <description>
        the OPNsense "ICAPeg" application
    </description>
    <items>
        <!-- container -->
        <general>
            <!-- fields -->
            <PortNum type="TextField">
                <default>1344</default>
                <Required>Y</Required>
            </PortNum>
            <WritingLogsToConsole type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </WritingLogsToConsole>
            <LogLevel type="OptionField">
                <Default>debug</Default>
                <OptionValues>
                    <debug>debug</debug>
                    <info>info</info>
                    <error>error</error>
                    <fatal>fatal</fatal>
                </OptionValues>
            </LogLevel>
            <DebuggingHeaders type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </DebuggingHeaders>
            <WebServerHost type="TextField">
                <default>http://localhost</default>
                <Required>Y</Required>
            </WebServerHost>
            <WebServerEndpoint type="TextField">
                <default>/service/message</default>
                <Required>Y</Required>
            </WebServerEndpoint>
        </general>
    </items>
</model>
