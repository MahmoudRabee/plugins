<model>
    <mount>//OPNsense/icapeg</mount>
    <description>
        the OPNsense "ICAPeg" application
    </description>
    <items>
        <!-- container -->
        <general>
            <!-- fields -->
            <PortNum type="TextField">
                <default>1344</default>
                <Required>Y</Required>
            </PortNum>
            <WritingLogsToConsole type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </WritingLogsToConsole>
            <logLevel type="OptionField">
                <Required>Y</Required>
                <default>normal</default>
                <OptionValues>
                    <normal>normal</normal>
                    <extended>extended</extended>
                    <debug>debug</debug>
                    <debug2>debug 2</debug2>
                    <debug3>debug 3</debug3>
                </OptionValues>
            </logLevel>
            <DebuggingHeaders type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </DebuggingHeaders>
            <WebServerHost type="TextField">
                <default>http://localhost</default>
                <Required>Y</Required>
            </WebServerHost>
            <WebServerEndpoint type="TextField">
                <default>/service/message</default>
                <Required>Y</Required>
            </WebServerEndpoint>
        </general>
    </items>
</model>
