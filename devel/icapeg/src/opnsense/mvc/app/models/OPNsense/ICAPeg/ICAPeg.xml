<model>
    <mount>//OPNsense/icapeg</mount>
    <description>
        the OPNsense "ICAPeg" application
    </description>
    <items>
        <!-- container -->
        <general>
            <Enabled type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </Enabled>
            <!-- fields -->
            <PortNum type="TextField">
                <default>1344</default>
                <Required>Y</Required>
