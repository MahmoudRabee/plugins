<model>
    <mount>//OPNsense/icapeg</mount>
    <description>
        the OPNsense "ICAPeg" application
    </description>
    <items>
        <!-- container -->
        <general>
            <!-- fields -->
            <PortNum type="TextField">
                <default>1344</default>
                <Required>Y</Required>
            </PortNum>
            <LogLevel type="OptionField">
                <Default>debug</Default>
                <Required>Y</Required>
                <OptionValues>
                    <debug>debug</debug>
                    <info>info</info>
                    <error>error</error>
                    <fatal>fatal</fatal>
                </OptionValues>
            </LogLevel>
            <WritingLogsToConsole type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </WritingLogsToConsole>
            <DebuggingHeaders type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </DebuggingHeaders>
         </general>
    </items>
</model>
